<?xml version="1.0" encoding="UTF-8"?>
<items>
    {# @var \App\Entity\InventoryItem[] items #}
    {% for item in items %}
        <item>
            <id>{{ item.id }}</id>
            <name>{{ item.name }}</name>
            <manufacturer>{{ item.manufacturer }}</manufacturer>
            <model>{{ item.model }}</model>
            <url>{{ item.url }}</url>
            <serialnumbers>{{ item.serialNumbers }}</serialnumbers>
            <notes>{{ item.notes }}</notes>
            {% if item.locations is empty %}
                <locations/>
            {% else %}
                <locations>
                    {% for location in item.locations %}
                        <location>{{ location }}</location>
                    {% endfor %}
                </locations>
            {% endif %}
            {% if item.locations is empty %}
                <types/>
            {% else %}
                <types>
                    {% for type in item.types %}
                        <type>{{ type }}</type>
                    {% endfor %}
                </types>
            {% endif %}
            <purchasePrice>{{ item.purchasePrice }}</purchasePrice>
            <currentPriceValue>{{ item.value }}</currentPriceValue>
            <quantity>{{ item.quantity }}</quantity>
            {% if item.acquiredDate is null %}
                <acquiredDate>{{ item.acquiredDate }}</acquiredDate>
            {% else %}
                <acquiredDate/>
            {% endif %}
            {% if item.deleted %}
                <deleted>1</deleted>
            {% else %}
                <deleted>0</deleted>
            {% endif %}
            {# @var \App\Service\ImageStorage imagesSvc #}
            {% set images = imagesSvc.itemImages(item) %}
            {% if images is empty %}
                <images/>
            {% else %}
                <images>
                    {% for image in images %}
                        <image>{{ imagesSvc.imageBase64(item, image) }}</image>
                    {% endfor %}
                </images>
            {% endif %}
        </item>
    {% endfor %}
</items>