{# Single tag button #}
{% macro tag(category, tag) %}
    <a class="btn btn-info" 
       href="{{ path('inventory_list_by_tag', {'category': category|url_encode, 'tag': tag|url_encode}) }}">
       {{ tag }}
    </a>
{% endmacro %}

{# Set of tag buttons #}
{% macro tags(category, tags) %}
    {% import _self as macros %}
    {% for tag in tags %}
        {{ macros.tag(category, tag) }}
    {% endfor %}
{% endmacro %}
